{% extends 'base.html.twig' %}

{% block title %}Presse{% endblock %}

{% block body %}

    <div class="container mx-auto">

        <h1>Presse</h1>

        <div class="">
            {% for texte in textes %}
            {% if texte.etat == true %}
            <div style="padding-top: 1rem">
                <span>{{ texte.description | raw }}</span>
            </div>
        </div>

        <hr>

        <div class="text-center pt-5">
            {% if images is not empty %}
                <div id="carouselExampleIndicators" class="carousel slide p-3 " data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% for images in texte.images %}
                            <div class="carousel-item {% if loop.first %} active {% endif %}">
                                <img src="{{ asset('asset/images/' ~ images.imageName) }}"
                                     class="d-block w-100 h-100 rounded-5" alt="Image RÃ©servation">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="text-lg-center pt-5">
        <p>
        <h4>Pour nous Contacter par mail :</h4>
        <a href="#"><i class="fa-regular fa-envelope" style="font-size: 3rem"></i><br>presse@memento-restaurant.com</a>
        </p>
    </div>



{% endblock %}
