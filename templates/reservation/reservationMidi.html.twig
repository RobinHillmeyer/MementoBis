        {#            </div> #}

        <div id="calendrierHeure"></div>

    </div>

    <div class="row">
        <div class="liens">
            <h2><a href="{{ path('reservation_validationMidi') }}" class="btn btn-primary">Valider</a></h2>
            <h2><a href="{{ path('reservation_home') }}" class="btn btn-primary">Retour</a></h2>
        </div>
    </div>
    </div>

{% endblock %}