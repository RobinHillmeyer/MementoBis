{% extends 'base.html.twig' %}

{% block title %}Concept du Midi{% endblock %}

{% block body %}

    <div class="container mx-auto">

        <h1>Concept du Midi</h1>

        <div class="row" id="sticky">
            <div class="liens">
                <h2>
                    <a class="btn btn-primary" href="{{ path('reservation_midi') }}">Réserver</a>
                </h2>
                <h2>
                    <a class="btn btn-primary" href="{{ path('concept_general') }}">Retour aux Concepts</a>
                </h2>
            </div>
        </div>

        <hr>

        <div class="">
            {% for texte in textes %}
            {% if texte.etat == true %}
            <div style="padding-top: 1rem">
                <span>{{ texte.description | raw }}</span>
            </div>
        </div>

        <hr>

        <div class="text-center pt-5">
            {% if images is not empty %}
                <div id="carouselExampleIndicators" class="carousel slide p-3 " data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% for images in images %}
                            <div class="carousel-item {% if loop.first %} active {% endif %}">
                                <img src="{{ asset('asset/images/' ~ images.imageName) }}"
                                     class="d-block w-100 h-100 rounded-5" alt="...">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            {% endif %}
            {% endfor %}
        </div>

        <div class="container mx-auto">

            <div style="float:left;width:50%;">
                <h1>Plats du moment Salés</h1>
                <hr>
                {% for plats in plats %}
                    {% if plats.saveur == 0 %}
                        {% if plats.etat == true %}
                            <div class="row justify-content-center">
                                <div class="d-flex align-items-stretch">
                                    <div class="card d-flex text-white bg-primary mb-3">
                                        <div class="card-header"><h2>{{ plats.titre | raw }}</h2></div>
                                        <div class="card-body">{{ plats.description | raw }}</div>

                                        {% for imagesplats in plats.images %}
                                            <div class="carousel-item {% if loop.first %} active {% endif %}">
                                                <img src="{{ asset('asset/images/' ~ imagesplats.imageName) }}"
                                                     class="d-block w-100 h-100 rounded-3 p-3" alt="...">
                                            </div>
                                        {% endfor %}

                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>

            <div style="float:left;width:50%;">
                <h1>Plats du moment Sucrés</h1>
                <hr>
                {% for plats in plats %}
                    {% if plats.saveur == 1 %}
                        {% if plats.etat == true %}
                            <div class="row justify-content-center">
                                <div class="d-flex align-items-stretch">
                                    <div class="card d-flex text-white bg-primary mb-3">
                                        <div class="card-header"><h2>{{ plats.titre | raw }}</h2></div>
                                        <div class="card-body">{{ plats.description | raw }}</div>

                                        {% for imagesplats in plats.images %}
                                            <div class="carousel-item {% if loop.first %} active {% endif %}">
                                                <img src="{{ asset('asset/images/' ~ imagesplats.imageName) }}"
                                                     class="d-block w-100 h-100 rounded-3 p-3" alt="...">
                                            </div>
                                        {% endfor %}

                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}
